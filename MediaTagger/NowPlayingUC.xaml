<UserControl x:Class="MediaPlayer.NowPlayingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="15" Margin="20, 50, 20, 20" Background="#801C2C49">
        <StackPanel Margin="30, 30, 30, 30">
            <Label Content="Now Playing" HorizontalAlignment="Center" 
                   Foreground="Black" FontSize="32" FontWeight="Bold"/>
            <Label x:Name="Title"/>
            <Label x:Name="Artist"/>
            <Label x:Name="Album"/>
            <Label x:Name="Year"/>
        </StackPanel>
    </Border>
</UserControl>
